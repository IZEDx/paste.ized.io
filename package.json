{
  "name": "paste.ized.io",
  "version": "1.0.0",
  "description": "",
  "author": "IZED",
  "main": "./dist/server.js",
  "bin": {
    "svelte-ts": "./dist/server.js"
  },
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "npm run dev-server & npm run dev-client",
    "build": "npm run clear && npm run build-server && npm run build-client",
    "build-server": "cross-env NODE_ENV=production parcel build src/server.ts --public-url . --out-dir ./dist/ --target node --bundle-node-modules",
    "build-client": "cross-env NODE_ENV=production parcel build src/index.html --public-url . --out-dir ./dist/client/ ",
    "dev-server": "parcel watch src/server.ts --public-url . --out-dir ./dist/  --target node",
    "dev-client": "parcel watch src/index.html --public-url . --out-dir ./dist/client/",
    "clear": "npm run clear-cache && npm run clear-dist",
    "clear-cache": "rm -rf .cache",
    "clear-dist": "rm -rf dist"
  },
  "browserslist": [
    "last 1 chrome versions"
  ],
  "staticFiles": {
    "staticPath": [
      {
        "outDirPattern": "**/client",
        "staticPath": "src/assets",
        "staticOutDir": "assets"
      }
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@pyoner/svelte-types": "^3.4.4-2",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^3.1.43",
    "@types/express": "^4.17.0",
    "@types/leveldown": "^4.0.0",
    "@types/levelup": "^3.1.1",
    "@types/node": "^12.7.1",
    "@types/route-parser": "^0.1.3",
    "axios": "^0.19.0",
    "axios-cache-adapter": "^2.3.3",
    "bcryptjs": "^2.4.3",
    "chalk": "^2.4.2",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "crypto-js": "^3.1.9-1",
    "express": "^4.17.1",
    "leveldown": "^5.1.1",
    "levelup": "^4.1.0",
    "parcel-bundler": "^1.8.1",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "parcel-plugin-svelte": "^4.0.2",
    "pretty-json-stringify": "0.0.2",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "route-parser": "0.0.5",
    "sass": "^1.22.10",
    "svelte": "^3.5.1",
    "svelte-preprocess": "^2.15.1",
    "typescript": "^3.5.3"
  }
}
